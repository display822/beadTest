<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View.OnClickListener" />

        <variable
            name="goLoanClick"
            type="OnClickListener" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f1f1f1"
        >

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refresh"
                app:srlDisableContentWhenRefresh="true"
                app:srlEnableLoadmore="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5f5f5">


                <!-- 刷新头-->
                <View
                    android:layout_width="0.1dp"
                    android:layout_height="30dp"/>


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- viewpager-->
                    <cn.bingoogolapple.bgabanner.BGABanner
                        android:id="@+id/loan_banner"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:banner_placeholderDrawable="@mipmap/ic_launcher"
                        app:banner_pointAutoPlayAble="true"
                        app:banner_pointAutoPlayInterval="2"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/color_FFFFFF"
                        >

                        <!-- 卡片-->
                        <TextView
                            android:layout_width="63dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:gravity="bottom|center_horizontal"
                            android:background="@color/main_color"
                            android:rotation="45"
                            android:translationX="22dp"
                            android:translationY="-12dp"
                            android:text="14天"
                            />

                        <TextView
                            android:id="@+id/borrow_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="--元"
                            android:textSize="20sp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            >
                            <SeekBar
                                android:id="@+id/seek_bar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxHeight="5dp"
                                android:minHeight="5dp"
                                android:progressDrawable="@drawable/my_seekbar_style"
                                android:thumb="@drawable/progress_bt"
                                android:max="100"
                                android:progress="50"
                                />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="500元"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="1000元"/>
                            </RelativeLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/fq_loan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_main_button"
                            android:layout_gravity="center_horizontal"
                            android:onClick="@{goLoanClick}"
                            android:text="申请借款"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@drawable/attention"
                        android:text="不向在校大学生提供贷款服务"
                        />

                </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </RelativeLayout>
</layout>