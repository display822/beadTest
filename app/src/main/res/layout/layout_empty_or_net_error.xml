<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_empty_or_net_error"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/ic_empty_1"
            android:gravity="center"
            android:text="您还没有申请贷款哦！"
            android:textColor="@color/color_666666"
            android:visibility="visible" />

        <Button
            android:id="@+id/tv_goloan"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_apply_by_now"
            android:gravity="center"
            android:padding="12dp"
            android:text="去贷款"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_net_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_net_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="30dp"
            android:drawableTop="@drawable/ic_net_error1"
            android:gravity="center"
            android:text="网络出错了，请点击按钮重新加载~"
            android:textColor="@color/color_666666" />

        <Button
            android:id="@+id/tv_reload"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_apply_by_now"
            android:gravity="center"
            android:padding="12dp"
            android:text="重新加载"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />


    </LinearLayout>


</RelativeLayout>